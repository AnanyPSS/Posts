<section class="section">
  <div class="container">
<%= simple_form_for @article,  html: { multipart: true }  do |f|  %>
<%= f.error_notification %>

  <div class="field">
      <div class="control">
        <%= f.input :title, label: "Title", input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
      </div>
  </div>

  <div class="field">
      <div class="control">
        <%= f.input :content, label: "Write your content here", input_html: {class: "textarea" }, wrapper: false, label_html: 
          {class:"label"}, placeholder: "Compose a new Post...", autofocus: true %>
      </div>
  </div>

  <%= f.button :submit, class: "button is-info" %>
<% end %>
</div>
</section>


