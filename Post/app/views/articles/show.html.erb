<section class="section">
  <div class="container">
<div class="columns">
  <div class="column is-8">
    <h1 class="title is-2 has-text-grey discussion-title"><%= @article.title %></h1>
    <h3 class="subtitle is-5 has-text-grey"> Posted on <span class="has-text-weight-semibold"> 
    	<%= verbose_date(@article.created_at) %>
    </span>
	</h3>
    <div class="level">
      <div class="level-left"></div>
      <div class="level-right">
        <div class="buttons">
            <%= link_to 'Edit Article', edit_article_path(@article), class:'button'%>
            <%= link_to 'Move To Bin', article_path(@article), method: :delete, data: { confirm: "Move the post to bin?" }, class:'button' %>
        </div>
      </div>
    </div>
    <div class="content"><%= @article.content.html_safe %></div>

    <section class="comments">
		<h2 class="subtitle is-5"><%= pluralize(@article.comments.count, 'Comment') %></h2>
			<%= render @article.comments %>
		<hr />

    <div class="comment-form">
		<h3 class="subtitle is-3">Leave a reply</h3>
		<%= render 'comments/form' %>
	</div>
    
  </div>

</div>
</div>
</section>